<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questionCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_question_number"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Q1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="General Knowledge"
                android:textColor="#5A5A5A"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Question Text -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="What is the capital of India?"
            android:textColor="#212121"
            android:textSize="17sp"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp" />

        <!-- Options Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:dividerPadding="8dp">

            <!-- Option 1 -->
            <LinearLayout
                android:id="@+id/layoutOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:background="@drawable/bg_option"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconOption1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="New Delhi"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Option 2 -->
            <LinearLayout
                android:id="@+id/layoutOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:background="@drawable/bg_option"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconOption2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Mumbai"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Option 3 -->
            <LinearLayout
                android:id="@+id/layoutOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:background="@drawable/bg_option"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconOption3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Kolkata"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Option 4 -->
            <LinearLayout
                android:id="@+id/layoutOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:background="@drawable/bg_option"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconOption4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Chennai"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Feedback Text -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Correct!"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
